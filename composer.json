{
    "name": "tomahawk/framework",
    "description": "The Tomahawk PHP Framework.",
    "keywords": ["framework", "tomahawk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Ellis",
            "email": "tellishtc@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "process-timeout": 10000,
        "github-protocols": ["https"]
    },
    "require": {
        "php": ">=5.6.4",
        "ext-mbstring": "*",
        "doctrine/orm": "~2.3",
        "doctrine/dbal": "~2.3",
        "doctrine/migrations": "~1.4",
        "doctrine/cache": "~1.6",
        "illuminate/database": "5.5.*",
        "monolog/monolog": "~1.23",
        "patchwork/utf8": "~1.3",
        "swiftmailer/swiftmailer": "~5.4",
        "symfony/config": "~3.3",
        "symfony/console": "~3.3",
        "symfony/class-loader": "~3.3",
        "symfony/debug": "~3.3",
        "symfony/event-dispatcher": "~3.3",
        "symfony/finder": "~3.3",
        "symfony/http-foundation": "~3.3",
        "symfony/http-kernel": "~3.3",
        "symfony/routing": "~3.3",
        "symfony/translation": "~3.3",
        "symfony/templating": "~3.3",
        "symfony/process": "~3.3",
        "twig/twig": "~1.28|~2.0",
        "predis/predis" : "~1.0",
        "psr/log" : "~1.0.0",
        "psr/container": "^1.0"

    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Tomahawk\\": "src/Tomahawk/"
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
