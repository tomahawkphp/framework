{
    "name": "tomahawk/framework",
    "description": "The Tomahawk PHP Framework.",
    "keywords": ["framework", "tomahawk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Ellis",
            "email": "tellishtc@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "process-timeout": 10000,
        "github-protocols": ["https"]
    },
    "require": {
        "php": ">=5.6.4",
        "ext-mcrypt": "*",
        "ext-mbstring": "*",
        "classpreloader/classpreloader": "^3.0",
        "classpreloader/console": "^2.0",
        "jeremeamia/superclosure": "^2.2",
        "doctrine/orm": "~2.5",
        "doctrine/cache": "~1.6",
        "monolog/monolog": "~1.19",
        "patchwork/utf8": "~1.3",
        "swiftmailer/swiftmailer": "~5.4",
        "symfony/config": "~3.0",
        "symfony/console": "~3.0",
        "symfony/class-loader": "~3.0",
        "symfony/debug": "~3.0",
        "symfony/event-dispatcher": "~3.0",
        "symfony/finder": "~3.0",
        "symfony/http-foundation": "~3.0",
        "symfony/http-kernel": "~3.0",
        "symfony/routing": "~3.0",
        "symfony/translation": "~3.0",
        "symfony/templating": "~3.0",
        "symfony/process": "~3.0",
        "twig/twig": "~1.24",
        "predis/predis" : "~1.0",
        "psr/log" : "~1.0.0"

    },
    "require-dev": {
        "phpunit/phpunit": "5.2.*"
    },
    "autoload": {
        "psr-4": {
            "Tomahawk\\": "src/Tomahawk/"
        }
    },
    "minimum-stability": "stable"
}
