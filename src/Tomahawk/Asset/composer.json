{
    "name": "tomahawk/asset",
    "description": "The Tomahawk PHP Asset Component.",
    "keywords": ["tomahawk", "asset"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Ellis",
            "email": "tellishtc@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "process-timeout": 10000,
        "github-protocols": ["https"]
    },
    "require": {
        "php": ">=5.6.4",
        "tomahawk/html": "~2.1.0"

    },
    "require-dev": {
        "phpunit/phpunit": "~5.3.0"
    },
    "suggest": {
        "tomahawk/url": "To easily generate urls to added assets"
    },
    "autoload": {
        "psr-4": {
            "Tomahawk\\Asset\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        }
    }
}
