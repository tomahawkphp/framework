<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         bootstrap="./phpunit.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Tomahawk Asset Component Test Suite">
            <directory suffix="Test.php">./Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./Asset</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./src/Tomahawk/*/*/Resources</directory>
                <directory>./src/Tomahawk/*/Tests</directory>
                <directory>./src/Tomahawk/DependencyInjection/Test</directory>
                <directory>./src/Tomahawk/Test</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
